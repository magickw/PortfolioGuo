<main class="main-gradient"> 
  <h1 class="sr-only contact">Contact</h1>
  <section class="main-spacing-container center-flex-column gap-64">
    <div class="text-center">
      <h2 class="white-text">Get in touch with me!</h2>
    </div>
    <div class="contact-form hor-margin-32">
      <form action="submit">
        <fieldset>
            <label for="name" class="sr-only">Name</label>
            <input type="text" id="name" name="name" placeholder="Enter your name"><br>

            <label for="email" class="sr-only">Email</label>
            <input type="email" id="email" name="email" placeholder="Enter your email"><br>

            <label for="message" class="sr-only">Message</label>
            <textarea name="message" id="message" cols="30" rows="10" placeholder="Enter your message"></textarea><br>

            <button type="submit" class="main-gradient">Submit</button>
        </fieldset>
      </form>
    </div>
  </section>
</main>

<script src="/js/contact.js"></script>